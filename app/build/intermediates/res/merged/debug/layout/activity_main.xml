<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20sp"
    android:weightSum="5"
    tools:context="com.baytag.daniel.proyectof.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="10sp"
        android:text="@string/titulo_login"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imVw_ImgUsu_ActMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:layout_weight="5"
        android:padding="10sp"
        android:src="@mipmap/pf" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edTx_NomUsu_ActMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/nom_usu"
        android:inputType="textEmailAddress"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edTx_Pass_ActMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/pass"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_Ing_ActMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="@string/ingresar"
            android:textColor="@color/fbutton_color_clouds"
            app:buttonColor="@color/fbutton_color_wet_asphalt"
            app:shadowEnabled="true" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_NvoUsu_ActMain"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:paddingLeft="8sp"
            android:textColor="@color/fbutton_color_clouds"
            app:buttonColor="@color/fbutton_color_wet_asphalt"
            app:shadowEnabled="true" />

    </LinearLayout>


</LinearLayout>
